<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:adjustViewBounds="true"
            app:srcCompat="@android:drawable/alert_dark_frame"/>
        <TextView
            android:id="@+id/titleLabelTextView"
            style="@style/ArtworkLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/label_title" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/ArtworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/creationDateLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/ArtworkLabelTextView"
            android:text="@string/label_date_created" />

        <TextView
            android:id="@+id/creationDateTextView"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/ArtworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mediumLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            style="@style/ArtworkLabelTextView"
            android:text="@string/label_medium" />

        <TextView
            android:id="@+id/mediumTextView"
            android:layout_row="3"
            android:layout_column="1"
            style="@style/ArtworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dimensionsLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            style="@style/ArtworkLabelTextView"
            android:text="@string/label_dimensions" />

        <TextView
            android:id="@+id/dimensionsTextView"
            android:layout_row="4"
            android:layout_column="1"
            style="@style/ArtworkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </GridLayout>

</ScrollView>